{% extends 'base-admin.html.twig' %}

{% block title %}Hello GameAdminController!{% endblock %}

{% block body %}
<div class="container">
    {{ form_start(form) }}
        {{ form_row(form.search)}}
        {{ form_row(form.price)}}
    <div class="row">
        <div>
            {{ form_row(form.genres)}}
        </div>
    </div>
        <button type="submit" class="btn btn-secondary">Rechercher</button>
    {{ form_end(form) }}
    <div class="pagination">
        {{ knp_pagination_render(pagination) }}
    </div>
    <div class="text-center">
        <a href="{{ path('app_game_add') }}"><i class="fa-solid fa-plus"></i></a>
    </div>
    <table class ="table table-hover table-dark">
        <thead>
        <tr>
            <th>Nom du jeux</th>
            <th colspan="2">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for game in pagination %}
            <tr>
                <td> {{ game.name }}</td>
                <td> <a href="{{ path('app_game_admin_details', {'slug': game.slug}) }}"><i class="fa-solid fa-eye"></i></a> </td>
                <td> <a href="{{ path('app_game_update', {'slug': game.slug}) }}"><i class="fa-solid fa-pen"></i></a> </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
