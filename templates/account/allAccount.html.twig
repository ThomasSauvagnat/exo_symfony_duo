{% extends 'base.front.html.twig' %}

{% block title %}Comptes{% endblock %}

{% block body %}

<div class="container my-2">
    <h2>Liste des comptes</h2>
    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th>Nom</th>
                <th>E-mail</th>
                <th>Pseudo</th>
                <th>Porte-feuille</th>
            </tr>
        </thead>
        <tbody>
        {#allAccounts#}
                {% for account in pagination %}
            <tr>
                <td>{{account.name}}  <a href="{{ path('app_account_edit', {'slug': account.slug})  }}"><i class="fa-solid fa-pencil"></i></a></td>
                <td>{{account.email}}</td>
                <td>{{account.nickname}}</td>
                <td>{{account.wallet}}</td>
            </tr>
                {% endfor %}

        <div class="pagination">
            {{ knp_pagination_render(pagination) }}
        </div>

        </tbody>
    </table>
</div>
{% endblock %}