{% extends 'base-admin.html.twig' %}

{% form_theme form 'bootstrap_5_horizontal_layout.html.twig' %}

{% block title %}Formulaire, ajout de forum{% endblock %}

{% block body %}

    <div class="container">
        <h2>Formulaire d'ajout de forum</h2>
        {{ form_start(form) }}
            {{ form_row(form.title) }}
            <button type="submit" class="btn btn-secondary">Ajouter</button>
        {{ form_end(form) }}

        <a href="{{ path('app_admin_forum') }}"><button class="btn btn-secondary mt-3">Retour</button></a>
    </div>

{% endblock %}