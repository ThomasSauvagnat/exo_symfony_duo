{% extends 'base.front.html.twig' %}

{% block title %}Liste des messages{% endblock %}

{% block body %}
    <div class="container">
        <h1>{{topic.title}}</h1>

        {% for message in topic.messages %}
            <p>Par {{topic.createdBy.name}}, </p>
            <p>Le {{message.createdAt | date("d/m/Y") }}</p>
            <p>{{message.content}}</p>
        {% endfor %}

        {# <a href="{{ path('app_topic') }}"><button class="btn btn-secondary mt-3">Retour</button></a> #}

    </div>

{% endblock %}