{% extends 'base.front.html.twig' %}

{% block title %} {{publisher.name}} {% endblock %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="text-center">
            <div class="col-md-12 mt-5">
                {{publisher.name}}
            </div>
            <div class="col-md-12 mt-3">
                <a href="{{publisher.website}}">{{publisher.website}}</a>
            </div>
            <div class="col-md-12 mt-3 mb-3">
                <img src="{{publisher.country.urlFlag}}"></img>
            </div>
        </div>
        {% for game in publisher.games %}
            <div class="col-md-4 text-center cardGame my-3">
            {% include "./card/_card.html.twig" %}
            </div>
        {% endfor %}
    </div>
</div>

{% endblock %}